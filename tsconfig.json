{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./src",
    "importHelpers": true,
    "module": "ES2022",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "target": "ES2022",
    "skipLibCheck": true,
    "strict": false,
    "plugins": [],
    "typeRoots": ["node_modules/@types"],
    "paths": {},
    "esModuleInterop": true,
    "lib": ["ES2022", "dom"]
  },
  "ts-node": {
    "esm": true
  },
}
